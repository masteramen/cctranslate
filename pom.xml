			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>default-cli</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
							<echo message="${project.basedir}/"/>
							<property name="buildtime" value="${maven.build.timestamp}" />
							<copy file="${project.build.directory}/${project.build.finalName}-jar-with-dependencies.jar" tofile="${project.basedir}/cc.jar" />
							<echo file="${project.basedir}/release.txt" message="${buildtime}${line.separator}" />
							<echo file="${project.basedir}/release.txt" append="true" message="https://github.com/masteramen/cctranslate/blob/Panel/cc.jar?raw=true${line.separator}" />
		
				            <echo message="BUILD ${buildtime}" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>


			<!-- 下面这个plugin -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<classpathPrefix>lib/</classpathPrefix><!--指定classpath的前缀 -->
							<mainClass>cc.translate.CcSplash</mainClass><!--指定主类的类名 -->
						</manifest>
					</archive>
				</configuration>
			</plugin>


			<!-- -->
			<plugin>
